    "html-to-react": "^1.3.4",
    "http": "0.0.0",
    "node-sass": "^4.11.0",
    "react": "^16.8.1",
    "react-cool-tabs": "^1.1.6",
    "react-dom": "^16.8.1",
    "react-router-dom": "^4.3.1",
    "react-validation": "^3.0.7",
    "sass-loader": "^7.1.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "style-loader": "^0.23.1"
